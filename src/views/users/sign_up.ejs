<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h3 class="brand-display text-center">Blocipedia: Social, Markdown Wikis</h3>
      <br>
      <header class="jumbotron my-4 padding">
        <p class="h4 d-flex justify-content-center">Sign Up</p>
        <div class="text-center">
          <div class="row d-flex justify-content-center">
            <div class="col-md-8">
              <form action="/users" method="post">
                <div class="form-group">
                  <label>Username:</label>
                  <input class="form-control text-center" type="text" name="username" placeholder="Enter Username">
                </div>
                <div class="form-group">
                  <label>Email:</label>
                  <input class="form-control text-center" type="email" name="email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                  <label>Password:</label>
                  <input class="form-control text-center" type="password" name="password" placeholder="Enter Password">
                </div>
                <div class="form-group">
                  <label>Password Confirmation:</label>
                  <input class="form-control text-center" type="password" name="passwordConfirmation" placeholder="Confirm Password">
                </div><br/>
                <input class="btn btn-primary" type="submit" value="Sign Up"/>
              </form>
            </div>
          </div>
        </div>
      </header>

      <section class="row d-flex justify-content-center">
        <section class="col-lg-4 text-center">
          <p class="card-text">Create as many public wikis as you want!</p>
          <a class="btn btn-info btn-sm" href="#">Free Plan</a>
        </section>

        <section class="col-lg-4 text-center">
          <p class="card-text">Create as many private wikis as you want!</p>
          <a class="btn btn-info btn-sm" href="#">Premium Plan</a>
        </section>
      </section>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
