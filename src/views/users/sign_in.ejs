<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h3 class="brand-display text-center">Blocipedia: Social, Markdown Wikis</h3>
      <br>
      <header class="jumbotron my-4 padding">
        <p class="h4 d-flex justify-content-center">Sign In</p>
        <div class="text-center">
          <div class="row d-flex justify-content-center">
            <div class="col-md-8">
              <form action="/users/sign_in" method="post">
                <div class="form-group">
                  <label>Email:</label>
                  <input class="form-control text-center" type="email" name="email" placeholder="Enter Email">
                  <small class="text-muted" id="emailHelp">Email must be a valid address.</small>
                </div>
                <div class="form-group">
                  <label>Password:</label>
                  <input class="form-control text-center" type="password" name="password" placeholder="Enter Password">
                  <small class="text-muted" id="passHelp">Password is case-sensitive.</small>
                </div>
                <input class="btn btn-primary" type="submit" value="Sign In"/>
              </form>
            </div>
          </div>
        </div>
      </header>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
